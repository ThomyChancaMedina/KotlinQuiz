<?xml version="1.0" encoding="utf-8"?>
<com.kotlinquiz.app.ui.questions.utils.ViewpagerHeader xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionTime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/time_scene">

    <com.thomy.library.CountDownTime
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:animation="true"
        app:clockwise="true"
        app:innerCircleColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:outerCircleColor="@color/colorPrimaryDark"
        app:timeTextColor="@color/white_2" />

    <include
        android:id="@+id/btn_result"
        layout="@layout/view_motion_btn_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toTopOf="parent" />

</com.kotlinquiz.app.ui.questions.utils.ViewpagerHeader>