<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <!--esta esta es las cartas-->
        <Constraint
            android:id="@+id/backgroundViewFirst"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.3" />
        <Constraint
            android:id="@+id/backgroundViewSecond"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            android:alpha="0"
            android:rotation="90"
            android:scaleX="0.2"
            android:scaleY="0.2"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.15" />
        <Constraint
            android:id="@+id/backgroundViewThird"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            android:alpha="0"
            android:rotation="90"
            android:scaleX="0.2"
            android:scaleY="0.2"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.15" />


        <Constraint
            android:id="@+id/indicatorViewFirst"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            android:layout_marginBottom="@dimen/common_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/indicatorViewSecond"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent" />
        <!--end esta esta es las cartas-->

        <Constraint
            android:id="@+id/indicatorViewSecond"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            android:layout_marginStart="@dimen/common_size"
            android:layout_marginEnd="@dimen/common_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewFirst"
            motion:layout_constraintEnd_toStartOf="@+id/indicatorViewThird"
            motion:layout_constraintStart_toEndOf="@+id/indicatorViewFirst"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewFirst" />
        <Constraint
            android:id="@+id/indicatorViewThird"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewSecond"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/indicatorViewSecond"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewSecond" />
        <Constraint
            android:id="@+id/indicatorViewActiveTop"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/tiny_size"
            motion:layout_constraintEnd_toEndOf="@+id/indicatorViewFirst"
            motion:layout_constraintStart_toStartOf="@+id/indicatorViewFirst"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewFirst" />
        <Constraint
            android:id="@+id/indicatorViewActiveBottom"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/tiny_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewFirst"
            motion:layout_constraintEnd_toEndOf="@+id/indicatorViewFirst"
            motion:layout_constraintStart_toStartOf="@+id/indicatorViewFirst" />
        <Constraint
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:scaleX="0.2"
            android:scaleY="0.2"
            android:textColor="@android:color/white"
            motion:layout_constrainedWidth="true"
            motion:layout_constraintBottom_toTopOf="@id/indicatorViewFirst"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/subTitleViewThird" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/left">


        <Constraint
            android:id="@+id/indicatorViewFirst"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            android:layout_marginBottom="@dimen/common_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/indicatorViewSecond"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/indicatorViewSecond"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            android:layout_marginStart="@dimen/common_size"
            android:layout_marginEnd="@dimen/common_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewFirst"
            motion:layout_constraintEnd_toStartOf="@+id/indicatorViewThird"
            motion:layout_constraintStart_toEndOf="@+id/indicatorViewFirst"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewFirst" />

        <Constraint
            android:id="@+id/indicatorViewThird"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewSecond"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/indicatorViewSecond"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewSecond" />
        <Constraint
            android:id="@+id/backgroundViewFirst"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.15" />

        <Constraint
            android:id="@+id/backgroundViewThird"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            android:alpha="0"
            android:rotation="90"
            android:scaleX="0.2"
            android:scaleY="0.2"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.15" />

        <Constraint
            android:id="@+id/backgroundViewSecond"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.3" />
        <Constraint
            android:id="@+id/indicatorViewActiveTop"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/tiny_size"
            motion:layout_constraintEnd_toEndOf="@+id/indicatorViewSecond"
            motion:layout_constraintStart_toStartOf="@+id/indicatorViewSecond"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewSecond" />
        <Constraint
            android:id="@+id/indicatorViewActiveBottom"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/tiny_size"
            motion:layout_constraintBottom_toBottomOf="@id/indicatorViewSecond"
            motion:layout_constraintEnd_toEndOf="@+id/indicatorViewSecond"
            motion:layout_constraintStart_toStartOf="@+id/indicatorViewSecond" />

    </ConstraintSet>

    <Transition
        android:id="@+id/toLeft"
        motion:constraintSetEnd="@+id/left"
        motion:constraintSetStart="@+id/start">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                android:rotation="90"
                android:scaleX="0.2"
                android:scaleY="0.2"
                motion:framePosition="100"
                motion:motionTarget="@+id/backgroundViewFirst" />

            <KeyAttribute
                android:alpha="1"
                android:rotation="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/backgroundViewSecond" />

            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="10"
                motion:motionTarget="@+id/indicatorViewActiveBottom" />
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="1"
                motion:framePosition="50"
                motion:motionTarget="@+id/indicatorViewActiveBottom" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="90"
                motion:motionTarget="@+id/indicatorViewActiveBottom" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="10"
                motion:motionTarget="@+id/indicatorViewActiveTop" />
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="1"
                motion:framePosition="50"
                motion:motionTarget="@+id/indicatorViewActiveTop" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="90"
                motion:motionTarget="@+id/indicatorViewActiveTop" />
            <KeyPosition
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveTop"
                motion:percentX="0"
                motion:percentY="-0.13" />
            <KeyPosition
                motion:framePosition="90"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveTop"
                motion:percentX="1"
                motion:percentY="-0.13" />
            <KeyPosition
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveBottom"
                motion:percentX="0"
                motion:percentY="0.13" />
            <KeyPosition
                motion:framePosition="90"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveBottom"
                motion:percentX="1"
                motion:percentY="0.13" />


        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/backgroundViewFirst"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.15" />
        <Constraint
            android:id="@+id/indicatorViewFirst"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            android:layout_marginBottom="@dimen/common_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/indicatorViewSecond"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/indicatorViewSecond"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            android:layout_marginStart="@dimen/common_size"
            android:layout_marginEnd="@dimen/common_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewFirst"
            motion:layout_constraintEnd_toStartOf="@+id/indicatorViewThird"
            motion:layout_constraintStart_toEndOf="@+id/indicatorViewFirst"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewFirst" />
        <Constraint
            android:id="@+id/indicatorViewThird"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/small_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewSecond"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/indicatorViewSecond"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewSecond" />
        <Constraint
            android:id="@+id/backgroundViewThird"
            android:layout_width="@dimen/background_view_size"
            android:layout_height="@dimen/background_view_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.3" />
        <Constraint
            android:id="@+id/indicatorViewActiveTop"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/tiny_size"
            motion:layout_constraintEnd_toEndOf="@+id/indicatorViewThird"
            motion:layout_constraintStart_toStartOf="@+id/indicatorViewThird"
            motion:layout_constraintTop_toTopOf="@+id/indicatorViewThird" />
        <Constraint
            android:id="@+id/indicatorViewActiveBottom"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/tiny_size"
            motion:layout_constraintBottom_toBottomOf="@+id/indicatorViewThird"
            motion:layout_constraintEnd_toEndOf="@+id/indicatorViewThird"
            motion:layout_constraintStart_toStartOf="@+id/indicatorViewThird" />

    </ConstraintSet>

    <Transition
        android:id="@+id/toEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/left">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                android:rotation="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/backgroundViewThird" />


            <KeyAttribute
                android:alpha="0"
                android:rotation="90"
                android:scaleX="0.4"
                android:scaleY="0.4"
                motion:framePosition="100"
                motion:motionTarget="@+id/backgroundViewSecond" />


            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="10"
                motion:motionTarget="@+id/indicatorViewActiveBottom" />
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="1"
                motion:framePosition="50"
                motion:motionTarget="@+id/indicatorViewActiveBottom" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="90"
                motion:motionTarget="@+id/indicatorViewActiveBottom" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="10"
                motion:motionTarget="@+id/indicatorViewActiveTop" />
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="1"
                motion:framePosition="50"
                motion:motionTarget="@+id/indicatorViewActiveTop" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1"
                motion:framePosition="90"
                motion:motionTarget="@+id/indicatorViewActiveTop" />
            <KeyPosition
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveTop"
                motion:percentX="0"
                motion:percentY="-0.13" />
            <KeyPosition
                motion:framePosition="90"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveTop"
                motion:percentX="1"
                motion:percentY="-0.13" />
            <KeyPosition
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveBottom"
                motion:percentX="0"
                motion:percentY="0.13" />
            <KeyPosition
                motion:framePosition="90"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/indicatorViewActiveBottom"
                motion:percentX="1"
                motion:percentY="0.13" />


        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
    </Transition>
</MotionScene>